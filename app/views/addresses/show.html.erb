<% provide(:title, 'My addresses') %>
<h1>My addresses</h1>

<%= link_to "Create New List", new_list_path, class: "btn btn-primary btn-xs active" %>
<table class="table table-striped table-bordered">
   <tr>
   <td align="center"><strong>Description</strong></td>                                                                         
   <td align="center"><strong>Created Date</strong></td>                                                                           
   <td align="center"><strong>Complete</strong></td>                                                                            
   </tr>      
    <% @users.addresses.each do |address| %>
  <tr>
  <td>
    <%= hidden_field :id, :value => address.id %>
    <%= link_to address.address1, address_path(:id => address.id) %> 
  </td>
  <td>
    <%= list.created_at %>
    </td>
    <td>
    <%= link_to "See Todos", list_path(:id => address.id), class: "btn btn-default btn-xs active" %> 
    <%= link_to "Edit", edit_list_path(address), method: "get", class: "btn btn-default btn-xs active"  %>
    <%= link_to "Delete", list_path(address), method: :delete, data: {confirm: "You sure?"}, class: "btn btn-warning btn-xs active" %>
 </td>
</tr>
<% end %>
</table>

