<% provide(:title, 'My Todo List') %>

item >show

<% if @list.nil? %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
   <!--%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok' %-->
 <% else %>

    <%= link_to "Create item", new_item_path, method: "get" %>
<div class="row">
   <div class="col-md-12 col-md-offset-3">
   <h1><%= @list.title %></h1>
  </div>

    <div class="col-md-4 col-md-offset-3">
    <% @items.each do |item| %>
    <div class="row">
    
    <div class="col-md-4 col-md-offset-3">
    <p><%= item.name %></p>
    </div>
    
    <div class="col-md-4 col-md-offset-3">
       <% if item.status_id = 0 %>
       <%= item.submit "Complete", class: "btn btn-primary" %> 
      <%= item.hidden_field :list_id, :value => @item.list_id %>
      <%= item.text_field :list_id, :value => @item.list_id %>
  
      <%else%>
       <input type ="buton" text= "Completed", class: "btn btn-primary" %> 
      <%end%>
    </div>
    <%end%>
  </div>
<% end %>
