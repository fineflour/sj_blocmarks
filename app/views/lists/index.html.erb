<h1>My Todo List Index</h1>


<%= link_to "Create New List", new_list_path, class: "btn btn-primary btn-xs active" %>
<table class="table table-striped table-bordered">
   <tr>
   <td align="center"><strong>Description</strong></td>                                                                         
   <td align="center"><strong>Created Date</strong></td>                                                                           
   <td align="center"><strong>Complete</strong></td>                                                                            
   </tr>      
    <% @lists.each do |list| %>
  <tr>
  <td>
    <%= hidden_field :id, :value => list.id %>
    <%= link_to list.title, list_path(:id => list.id) %> 
  </td>
  <td>
    <%= list.created_at %>
    </td>
    <td>
    <%= link_to "See Todos", list_path(:id => list.id), class: "btn btn-default btn-xs active" %> 
    <%= link_to "Edit", edit_list_path(list), method: "get", class: "btn btn-default btn-xs active"  %>
    <%= link_to "Delete", list_path(list), method: :delete, data: {confirm: "You sure?"}, class: "btn btn-warning btn-xs active" %>
 </td>
</tr>
<% end %>
</table>
