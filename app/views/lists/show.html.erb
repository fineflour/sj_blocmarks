<% provide(:title, 'My Todo List') %>
List>Show

<% if @list.nil? %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
   <!--%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok' %-->
 <% else %>

  <div class="row">
   <div class="col-md-6 col-md-offset-3">
   <h1><%= @list.title %></h1>
  </div>
   
  <div class="col-md-6 col-md-offset-3">
    <%= link_to "Create item", new_item_path, method: "get" %>
   
   <table class="table table-striped">
    <% @items.each do |item| %>
      <tr>
      <td>
        <%= item.name %>
      </td>
      <td>
        <%= item.created_at %>
      </td>

      <td>
      <% if item.status_id == 0 %> 
        <%= item.hidden_filed :list_id,  
        <%= link_to "Comeplete", edit_item_path(item), class: "btn btn-primary",  method: "get" %>
      <%else%> 
        <p>Comepleted</p>
      <% end %>
      </td>
    </tr>
    <%end%>
    </table>
  </div>
<% end %>
